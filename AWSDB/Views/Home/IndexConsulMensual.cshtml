@model CombinedViewModel
<form asp-controller="IndexConsulMensual" method="post">
    <div>
        <label class="Titulo-IndexU">Bienvenido/a empleado</label>
    </div>

    <div class="row">
        <div class="table-responsive">
            <table class="table table-striped" style="overflow-y:auto;">
                <thead>
                    <tr>
                        <th>Salario Bruto</th>
                        <th>Total Deducciones</th>
                        <th>Salario Neto</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PlanillaMensual)
                    {
                    <tr>
                    <td>@item.salarioBruto</td>
                    <td>@item.totalDeducciones</td>
                    <td>@item.salarioNeto</td>
                    <td><button asp-action="MensualDeduccionesV" asp-route-Id="@item.id" type="submit" class="btn btn-primary">Consultar Deducciones</button></td>
                    </tr>
                    }
                </tbody>
                <tbody>

                    <div class="input-group-append">
                        <button asp-action="" type="submit" class="btn btn-primary">Consultar planilla semanal</button>
                        <button asp-action="" type="submit" class="btn btn-primary">Consultar planilla mensual</button>
                        <button asp-action="VolverLogin" type="submit" class="btn btn-primary">Salir</button>
                        @if (Model.showButton == true)
                        {
                            <button asp-action="" id="botonRegresar" type="submit" class="btn btn-primary">Regresar</button>
                        }
                    </div>

                </tbody>
            </table>
        </div>
    </div>
    <div class="form-group" style="display:none;">
        <label asp-for="NombreEmpleado">@Model.NombreEmpleado</label>
        <input asp-for="NombreEmpleado" class="form-control" />
    </div>
</form>
@if (TempData["Message"] != null) 
{
	<script>
		alert('@TempData["Message"]');
	</script>
}