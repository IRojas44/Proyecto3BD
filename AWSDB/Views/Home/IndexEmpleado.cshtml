@model CombinedViewModel
<form asp-controller="IndexEmpleado" method="post">
    <div>
        <label class="Titulo-IndexU">Bienvenido/a empleado: @Model.NombreEmpleado</label>
    </div>
   
    <div class="row">
        <div class="table-responsive">
            <table class="table table-striped" style="overflow-y:auto;">
                <thead>
                    <tr>
                        <th>Salario Bruto</th>
                        <th>Total Deducciones</th>
                        <th>Salario Neto</th>
                    </tr>
                </thead>
                <tbody >
                    @*@foreach (var item in Model.LeadDetails)
                    {
                        <tr>
                        <td>@item.Codigo</td>
                        <td>@item.Nombre</td>
                        <td>@item.ClaseArticulo</td>
                        <td><button asp-action="EditarV" asp-route-Id="@item.id" type="submit" class="btn btn-primary">Editar este empleado/a</button></td>
                        </tr>
                    }*@
                </tbody>
                <tbody>

					<div class="input-group-append">
                        <button asp-action="IndexConsulSemV" type="submit" class="btn btn-primary">Consultar planilla semanal</button>
                        <button asp-action="IndexConsulMensualV" type="submit" class="btn btn-primary">Consultar planilla mensual</button>
						
                        @if (Model.showButton == 1)
                        {

                            <button asp-action="VolverLogin2" id="botonRegresar" type="submit" class="btn btn-primary">Regresar</button>
                        }else{
                            <button asp-action="VolverLogin" type="submit" class="btn btn-primary">Salir</button>
                        }
					</div>

				</tbody>
			</table>
		</div>
	</div>
    <div class="form-group" style="display:none;">
        <label asp-for="NombreEmpleado">@Model.NombreEmpleado</label>
        <input asp-for="NombreEmpleado" class="form-control" />
    </div>
    <div class="form-group" style="display:none;">
        <label asp-for="NombreAdmin">@Model.NombreAdmin</label>
        <input asp-for="NombreAdmin" class="form-control" />
    </div>
    <div class="form-group" style="display:none;">
        <label asp-for="showButton">@Model.showButton</label>
        <input asp-for="showButton" class="form-control" />
    </div>
</form>
@if (TempData["Message"] != null) 
{
	<script>
		alert('@TempData["Message"]');
	</script>
}