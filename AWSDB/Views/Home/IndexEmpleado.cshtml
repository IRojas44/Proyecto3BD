@model CombinedViewModel
<form asp-controller="IndexEmpleado" method="post">
    <div>
        <label class="Titulo-IndexU">Bienvenido/a empleado</label>
    </div>
   
    <div class="row">
        <div class="table-responsive">
            <table class="table table-striped" style="overflow-y:auto;">
                <thead>
                    <tr>
                        <th>Codigo</th>
                        <th>Nombre</th>
                        <th>Clase</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody style="display:none;">

                    @foreach (var item in Model.LeadDetails)
                    {
                        <tr>
                            <td>@item.Codigo</td>
                            <td>@item.Nombre</td>
                            <td>@item.ClaseArticulo</td>
                            <td>@item.Precio</td>
                        </tr>
                    }

                </tbody>
                <tbody>

                    

					<div class="input-group-append">
                        <button asp-action="" type="submit" class="btn btn-primary">Consultar planilla semanal</button>
                        <button asp-action="" type="submit" class="btn btn-primary">Consultar planilla mensual</button>
						<button asp-action="VolverLogin" type="submit" class="btn btn-primary">Salir</button>
                        @if (Model.showButton == true)
                        {
                            <button asp-action="" id="botonRegresar" type="submit" class="btn btn-primary">Regresar</button>
                        }
					</div>

				</tbody>
			</table>
		</div>
	</div>
    <div class="form-group" style="display:none;">
        <label asp-for="UserName">@Model.UserName</label>
        <input asp-for="UserName" class="form-control" />
    </div>
</form>
@if (TempData["Message"] != null) 
{
	<script>
		alert('@TempData["Message"]');
	</script>
}