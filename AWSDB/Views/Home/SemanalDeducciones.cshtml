@model CombinedViewModel
<form asp-controller="SemanalDeducciones" method="post">
    <div>
        <label class="Titulo-IndexU">Deducciones Semanales</label>
    </div>
   
    <div class="row">
        <div class="table-responsive">
            <table class="table table-striped" style="overflow-y:auto;">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Porcentaje</th>
                        <th>Monto de Deduccion</th>

                </thead>
                <tbody>
                    @foreach (var item in Model.semanalDeducciones)
                    {
                        <tr>
                            <td>@item.nombre</td>
                            <td>@item.porcentaje</td>
                            <td>@item.monto</td>
                        </tr>
                    }
                </tbody>
                <tbody>

					<div class="input-group-append">
                        <button asp-action="VolverSemanalD" type="submit" class="btn btn-primary">Regresar</button>
					</div>

				</tbody>
			</table>
		</div>
	</div>
    <div class="form-group" style="display:none;">
        <label asp-for="NombreEmpleado">@Model.NombreEmpleado</label>
        <input asp-for="NombreEmpleado" class="form-control" />
    </div>
    <div class="form-group" style="display:none;">
        <label asp-for="NombreAdmin">@Model.NombreAdmin</label>
        <input asp-for="NombreAdmin" class="form-control" />
    </div>
    <div class="form-group" style="display:none;">
        <label asp-for="showButton">@Model.showButton</label>
        <input asp-for="showButton" class="form-control" />
    </div>
</form>
@if (TempData["Message"] != null) 
{
	<script>
		alert('@TempData["Message"]');
	</script>
}