@model CombinedViewModel
<form asp-controller="IndexConsulSem" method="post">
    <div>
        <label class="Titulo-IndexU">Planilla Semanal</label>
    </div>
   
    <div class="row">
        <div class="table-responsive">
            <table class="table table-striped" style="overflow-y:auto;">
                <thead>
                    <tr>
                        <th>Salario Bruto</th>
                        <th>Total Deducciones</th>
                        <th>Salario Neto</th>
                        <th>Horas Ordinarios</th>
                        <th>Horas Extras</th>
                        <th>Horas Dobles</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PlanillaSemanal)
                    {
                        <tr>
                            <td>@item.salarioBruto</td>
                            <td>@item.totalDeducciones</td>
                            <td>@item.salarioNeto</td>
                            <td>@item.Horas</td>
                            <td>@item.HorasExtras</td>
                            <td>@item.HorasDobles</td>
                            <td><button asp-action="SemDeduccionesV" asp-route-Id="@item.id" type="submit" class="btn btn-primary">Consultar Deducciones</button></td>
                            <td><button asp-action="SemBrutoV" asp-route-Id="@item.id" type="submit" class="btn btn-primary">Consultar Salario</button></td>
                        </tr>
                    }
                </tbody>

                <tbody>

					<div class="input-group-append">
                        <button asp-action="VolverEmpleado2" id="botonRegresar" type="submit" class="btn btn-primary">Regresar</button>
                  
					</div>

				</tbody>
			</table>
		</div>
	</div>
    <div class="form-group" style="display:none;">
        <label asp-for="NombreEmpleado">@Model.NombreEmpleado</label>
        <input asp-for="NombreEmpleado" class="form-control" />
    </div>
    <div class="form-group" style="display:none;">
        <label asp-for="NombreAdmin">@Model.NombreAdmin</label>
        <input asp-for="NombreAdmin" class="form-control" />
    </div>
    <div class="form-group" style="display:none;">
        <label asp-for="showButton">@Model.showButton</label>
        <input asp-for="showButton" class="form-control" />
    </div>
</form>
@if (TempData["Message"] != null) 
{
	<script>
		alert('@TempData["Message"]');
	</script>
}